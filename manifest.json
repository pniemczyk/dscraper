{
  "name": "Profile data downloader",
  "description": "This tool allow you to download user data to your external service",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background..min.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.min.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "media/icon.png",
    "default_popup": "browser.html",
    "default_title": "Profile downloader"
  },
  "page_action": {
    "default_icon": "media/icon.png",
    "default_title": "Profile downloader",
    "default_popup": "page.html"
  },
  "manifest_version": 2
}
